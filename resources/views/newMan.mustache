<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

     <script  src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
     <link rel="stylesheet" href="cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.3/css/bootstrap-select.min.css">
     <script type="text/javascript" src="cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.3/js/bootstrap-select.min.js"></script>

    <script>
      $(document).ready(function () {
        $('#selectMan').selectpicker();
      });
    </script>

    <title>Adding  a new manufracturer</title>
  </head>
  <body style="background:#D1E0FF">
     <div class="container">
         <ul class="nav nav-pills" style="padding-top:10px;">
                <a href="/index" class="btn btn-success">Cars</a>
                <a href="/manufractures" class="btn btn-success">Manufractures</a>
                <a href="/datamin" class="btn btn-success">DataMining</a>
    </ul>
      <h1>Add new manufracturer</h1>
      <div id="addForm" style="width:30%;">
      <form action="/models/manufracturers/create" method="post">
           <div class="form-group">
          <label>Name:</label>
         <input type="text" class="form-control" name="name" placeholder="Name">
          </div>
      <div class="form-group">
       <label>Year of foundation:</label>
       <input type="number" class="form-control" name="yearFounded" placeholder="Year">
         </div> 
      <div class="form-group">
              <label>City:</label><br/>
                <select name="cityId" class="form-control" id="cityid">
                    {{#cities}}
                    <option value="{{cityid}}">{{name}}</option>
                    {{/cities}}
                </select>
            </div>
			<div class="form-group">
              <label>Country:</label><br/>
                <select name="countryId" class="form-control" id="countryid">
                    {{#countries}}
                    <option value="{{countryid}}">{{name}}</option>
                    {{/countries}}
                </select>
            </div>
       <button type="submit" class="btn btn-primary" style="float:right">Add manufracturer</button>

       </form>
       </div>
    </div>
  </body>
</html>
